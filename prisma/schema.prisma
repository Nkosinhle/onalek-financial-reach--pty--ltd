generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum ApplicationStatus {
  PENDING
  APPROVED
  DECLINED
  NEEDS_INFO
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  applications Application[]
}

model Application {
  id             String            @id @default(cuid())
  userId         String
  user           User              @relation(fields: [userId], references: [id])
  fullName       String
  saIdNumber     String
  amountRequested Int
  repayDays Int
  status         ApplicationStatus @default(PENDING)

  adminNotes   String? 
  reviewedAt   DateTime?
  reviewedById String?

  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  documents Document[]
  docsUpdatedAt DateTime? 

  reviewLogs ReviewLog[]

  clientMessage    String?
  decisionAt       DateTime?
  decidedByClerkId String?
}

enum DocumentType {
  ID_DOCUMENT
  SELFIE_WITH_ID
  PAYSLIP
  PROOF_OF_RESIDENCE
}

model Document {
  id               String       @id @default(cuid())
  applicationId    String
  application      Application  @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  type             DocumentType
  storagePath      String
  uploadedByClerkId String
  uploadedAt       DateTime     @default(now())

  @@unique([applicationId, type])

  reviewStatus      String   @default("PENDING")
  reviewedAt        DateTime?
  reviewedByClerkId String?
  reviewNotes       String?
}

model ReviewLog {
  id            String   @id @default(cuid())
  applicationId String
  adminClerkId  String
  oldStatus     String?
  newStatus     String?
  oldNotes      String?
  newNotes      String?
  createdAt     DateTime @default(now())

  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@index([applicationId])
  @@index([createdAt])
}

model RateLimitEvent {
  id        String   @id @default(cuid()) @map("id")
  clerkId   String   @map("clerk_id")
  action    String   @map("action")
  createdAt DateTime @default(now()) @map("created_at")

  @@index([clerkId, action, createdAt], map: "rate_limit_events_clerk_action_created_idx")
  @@map("rate_limit_events")
}

model UploadLog {
  id                String   @id @default(cuid()) @map("id")
  applicationId     String   @map("application_id")
  uploadedByClerkId String   @map("uploaded_by_clerk_id")
  documentType      String   @map("document_type")
  storagePath       String   @map("storage_path")
  createdAt         DateTime @default(now()) @map("created_at")

  @@index([applicationId, createdAt])
  @@map("upload_logs")
}